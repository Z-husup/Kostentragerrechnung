<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="720.0" prefWidth="1045.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.prog.kostentragerrechnung.controller.InputPageController">
<children>
<TabPane layoutY="64.0" prefHeight="656.0" prefWidth="1077.0" tabClosingPolicy="UNAVAILABLE">
<tabs>
    <Tab fx:id="materialsTab" text="Material">
        <content>
            <AnchorPane styleClass="content-pane">
                <children>
                    <TableView fx:id="materialsTable" layoutX="27.0" layoutY="66.0" prefHeight="507.0" prefWidth="1024.0" styleClass="data-table">
                        <columns>
                            <TableColumn fx:id="materialId" text="Material-ID" />
                            <TableColumn fx:id="materialName" text="Materialname" />
                            <TableColumn fx:id="unitCost" text="Stückkosten" />
                            <TableColumn fx:id="unit" text="Einheit" />
                            <TableColumn fx:id="stockQuantity" text="Lagerbestand" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                    <Button fx:id="saveMaterialButton" layoutX="997.0" layoutY="14.0" onAction="#saveMaterialTable" styleClass="save-button" text="Save" />
                </children>
            </AnchorPane>
        </content>
    </Tab>
    
    <Tab fx:id="partsTab" text="Teil">
        <content>
            <AnchorPane styleClass="content-pane">
                <children>
                    <TableView fx:id="partsTable" layoutX="27.0" layoutY="57.0" prefHeight="503.0" prefWidth="1015.0" styleClass="data-table">
                        <columns>
                            <TableColumn fx:id="partId" text="Teil-ID" />
                            <TableColumn fx:id="materialIdRef" text="Material-ID" />
                            <TableColumn fx:id="partName" text="Name" />
                            <TableColumn fx:id="weight" text="Gewicht" />
                            <TableColumn fx:id="dimensions" text="Abmessungen" />
                            <TableColumn fx:id="quantity" text="Menge" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                    <Button fx:id="savePartsButton" layoutX="988.0" layoutY="14.0" onAction="#savePartsTable" styleClass="save-button" text="Save" />
                </children>
            </AnchorPane>
        </content>
    </Tab>

    <Tab fx:id="machinesTab" text="Maschine">
        <content>
            <AnchorPane styleClass="content-pane">
                <children>
                    <TableView fx:id="machinesTable" layoutX="27.0" layoutY="70.0" prefHeight="485.0" prefWidth="1003.0" styleClass="data-table">
                        <columns>
                            <TableColumn fx:id="machineId" text="Maschinen-ID" />
                            <TableColumn fx:id="machineName" text="Arbeitsplatzname" />
                            <TableColumn fx:id="machineRate" text="Maschinensatz (€/h)" />
                            <TableColumn fx:id="workerRate" text="Mitarbeitersatz (€/h)" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                    <Button fx:id="saveMachinesButton" layoutX="976.0" layoutY="14.0" onAction="#saveMachinesTable" styleClass="save-button" text="Save" />
                </children>
            </AnchorPane>
        </content>
    </Tab>

    <Tab fx:id="workPlanTab" text="Arbeitsplan">
        <content>
            <AnchorPane styleClass="content-pane">
                <children>
                    <TableView fx:id="workPlanTable" layoutX="27.0" layoutY="61.0" prefHeight="503.0" prefWidth="1017.0" styleClass="data-table">
                        <columns>
                            <TableColumn fx:id="workPlanId" text="Arbeitsplan-ID" />
                            <TableColumn fx:id="stepNumber" text="Schritt-Nr." />
                            <TableColumn fx:id="operationDesc" text="Arbeitsschritt" />
                            <TableColumn fx:id="duration" text="Dauer (Minuten)" />
                            <TableColumn fx:id="machineIdRef" text="Maschinen-ID" />
                            <TableColumn fx:id="workStationId" text="Arbeitsplatz-ID" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                    <Button fx:id="saveWorkPlanButton" layoutX="990.0" layoutY="14.0" onAction="#saveWorkPlanTable" styleClass="save-button" text="Save" />
                </children>
            </AnchorPane>
        </content>
    </Tab>

    <Tab fx:id="productStructureTab" text="Produktstruktur">
        <content>
            <AnchorPane styleClass="content-pane">
                <children>
                    <TableView fx:id="productStructureTable" layoutX="27.0" layoutY="63.0" prefHeight="507.0" prefWidth="1017.0" styleClass="data-table">
                        <columns>
                            <TableColumn fx:id="productId" text="Produkt-ID" />
                            <TableColumn fx:id="componentId" text="Komponenten-ID" />
                            <TableColumn fx:id="componentName" text="Komponentenname" />
                            <TableColumn fx:id="parentComponent" text="Übergeordnete-Komponente" />
                            <TableColumn fx:id="geometry" text="Geometrie" />
                            <TableColumn fx:id="partRef" text="Teil-ID" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                    <Button fx:id="saveProductStructureButton" layoutX="990.0" layoutY="14.0" onAction="#saveProductStructureTable" styleClass="save-button" text="Save" />
                </children>
            </AnchorPane>
        </content>
    </Tab>
</tabs>
</TabPane>
<Text layoutX="20.0" layoutY="50.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Herstellkosten_Kostenträgerrechnung">
<font>
<Font size="24.0" />
</font>
</Text>
<Button fx:id="calculateButton" layoutX="880.0" layoutY="28.0" mnemonicParsing="false" onAction="#calculate" prefHeight="29.0" prefWidth="182.0" text="Calculate" />
<Button fx:id="importExcelButton" layoutX="691.0" layoutY="28.0" mnemonicParsing="false" onAction="#importExcel" prefHeight="29.0" prefWidth="161.0" text="Import Excel" />
<Button fx:id="helpButton" layoutX="501.0" layoutY="28.0" mnemonicParsing="false" onAction="#openHelpPage" prefHeight="29.0" prefWidth="161.0" text="Help" />
</children>
</AnchorPane>
